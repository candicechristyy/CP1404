BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            on_text: app.handle_calculate()

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate()
    Label:
        id: output_miles
        color: (1, 1, 0, 1)
